---
import Layout from "./Layout.astro";
import Breadcrumbs from "../components/Breadcrumbs.astro";

interface BreadcrumbItem {
  name: string;
  url: string;
}

interface Props {
  title: string;
  intro: string;
  description?: string;
  structuredData?: object;
  breadcrumbs?: BreadcrumbItem[];
}

const { title, intro, description, structuredData, breadcrumbs } = Astro.props;
const pageTitle = `${title} | Romuald Tisserand`;
const pageDescription = description || intro;
---

<Layout
  title={pageTitle}
  description={pageDescription}
  structuredData={structuredData}
>
  <div class="projects-page">
    {breadcrumbs && <Breadcrumbs items={breadcrumbs} />}
    <header class="page-header">
      <h1>{title}</h1>
      <p class="intro">{intro}</p>
    </header>

    <section class="projects-section">
      <div class="projects-list">
        <slot />
      </div>
    </section>
  </div>
</Layout>

<style>
  .projects-page {
    max-width: 900px;
    margin: 0 auto;
  }

  .page-header {
    text-align: center;
    margin-top: 4rem;
    margin-bottom: 2rem;
  }

  h1 {
    margin-bottom: 1rem;
  }

  .intro {
    font-size: 1.2rem;
    max-width: 700px;
    margin: 0 auto;
    line-height: 1.6;
    opacity: 0.9;
  }

  .projects-section {
    margin-bottom: 4rem;
  }

  .projects-list {
    display: flex;
    flex-direction: column;
    gap: 2rem;
  }

  /* Responsive mobile */
  @media (max-width: 768px) {
    .intro {
      font-size: 1rem;
    }

    .projects-section {
      margin-bottom: 3rem;
    }

    .projects-list {
      gap: 1.5rem;
    }
  }

  /* Responsive large screens */
  @media (min-width: 1440px) {
    .intro {
      font-size: 1.3rem;
    }

    .projects-list {
      gap: 2.5rem;
    }
  }
</style>
