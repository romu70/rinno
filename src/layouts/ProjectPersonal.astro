---
import Layout from "./Layout.astro";

interface Props {
    title: string;
    subtitle: string;
    year: string;
}

const { title, subtitle, year } = Astro.props;
const pageTitle = `${title} - Romuald Tisserand`;
---

<Layout title={pageTitle}>
    <article class="project-detail">
        <a href="/perso" class="back-link">← Retour aux projets</a>

        <header class="hero">
            <h1>{title}</h1>
            <p class="subtitle">{subtitle}</p>
            <div class="meta">
                <span class="year">{year}</span>
            </div>
        </header>

        <slot />

        <footer class="project-footer">
            <a href="/perso" class="back-button">← Retour aux projets</a>
        </footer>
    </article>
</Layout>

<style>
    .project-detail {
        max-width: 800px;
        margin: 0 auto;
    }

    .back-link {
        display: inline-block;
        color: var(--primary-color);
        text-decoration: none;
        margin-bottom: 2rem;
        transition: color 0.3s ease;
    }

    .back-link:hover {
        color: var(--color-darkest);
    }

    .hero {
        text-align: center;
        margin-bottom: 4rem;
        padding-bottom: 2rem;
        border-bottom: 2px solid rgba(253, 240, 213, 0.2);
    }

    h1 {
        font-size: 3.5rem;
        margin-bottom: 1rem;
    }

    .subtitle {
        font-size: 1.5rem;
        color: var(--color-darkest);
        margin-bottom: 1.5rem;
        font-style: italic;
    }

    .meta {
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 1rem;
    }

    .year {
        font-size: 1.1rem;
        color: var(--primary-color);
        font-weight: bold;
    }

    :global(.keywords) {
        display: flex;
        flex-wrap: wrap;
        gap: 0.5rem;
    }

    :global(.keyword) {
        font-size: 0.85rem;
        color: var(--primary-color);
        background-color: rgba(253, 240, 213, 0.1);
        padding: 0.4rem 1rem;
        border-radius: var(--radius);
        border: 1px solid rgba(253, 240, 213, 0.3);
    }

    :global(.content-section) {
        margin-bottom: 3rem;
    }

    :global(.content-section.highlight) {
        background-color: rgba(231, 76, 60, 0.1);
        border-left: 4px solid var(--color-darkest);
        padding: 1.5rem;
        border-radius: var(--radius);
    }

    :global(.content-section h2) {
        font-size: 2rem;
        margin-bottom: 1rem;
        color: var(--color-darkest);
    }

    :global(.content-section h3) {
        font-size: 1.4rem;
        color: var(--primary-color);
        margin-top: 1.5rem;
        margin-bottom: 0.8rem;
    }

    :global(.content-section p) {
        font-size: 1.1rem;
        line-height: 1.8;
        margin-bottom: 1rem;
    }

    :global(.content-section strong) {
        color: var(--color-darkest);
    }

    :global(.content-section ul) {
        list-style: none;
        padding: 0;
    }

    :global(.content-section ul li) {
        font-size: 1.1rem;
        color: var(--primary-color);
        line-height: 1.8;
        padding-left: 1.5rem;
        position: relative;
        margin-bottom: 0.8rem;
    }

    :global(.content-section ul li::before) {
        content: "→";
        position: absolute;
        left: 0;
        color: var(--color-darkest);
        font-weight: bold;
    }

    .project-footer {
        margin-top: 4rem;
        padding-top: 2rem;
        border-top: 2px solid rgba(253, 240, 213, 0.2);
        text-align: center;
    }

    .back-button {
        display: inline-block;
        padding: 1rem 2rem;
        background-color: var(--color-darkest);
        color: var(--primary-color);
        text-decoration: none;
        border-radius: var(--radius);
        font-size: 1.1rem;
        font-weight: bold;
        transition:
            transform 0.3s ease,
            background-color 0.3s ease;
    }

    .back-button:hover {
        background-color: #c0392b;
        transform: translateY(-2px);
    }

    /* Responsive mobile */
    @media (max-width: 768px) {
        .back-link {
            margin-bottom: 1.5rem;
        }

        .hero {
            margin-bottom: 2rem;
        }

        h1 {
            font-size: 2.5rem;
        }

        .subtitle {
            font-size: 1.2rem;
        }

        .meta {
            gap: 0.8rem;
        }

        .year {
            font-size: 1rem;
        }

        :global(.keyword) {
            font-size: 0.75rem;
        }

        :global(.content-section) {
            margin-bottom: 2rem;
        }

        :global(.content-section.highlight) {
            padding: 1rem;
        }

        :global(.content-section h2) {
            font-size: 1.6rem;
        }

        :global(.content-section h3) {
            font-size: 1.2rem;
        }

        :global(.content-section p),
        :global(.content-section ul li) {
            font-size: 1rem;
        }

        .project-footer {
            margin-top: 3rem;
        }

        .back-button {
            padding: 0.8rem 1.5rem;
            font-size: 1rem;
        }
    }

    /* Responsive large screens */
    @media (min-width: 1440px) {
        h1 {
            font-size: 4rem;
        }

        .subtitle {
            font-size: 1.7rem;
        }

        :global(.content-section h2) {
            font-size: 2.3rem;
        }

        :global(.content-section h3) {
            font-size: 1.6rem;
        }

        :global(.content-section p),
        :global(.content-section ul li) {
            font-size: 1.2rem;
        }
    }
</style>
