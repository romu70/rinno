---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<div class="subsection">
  <h3>{title}</h3>
  <slot />
</div>

<style>
  .subsection {
    margin-top: 1.5rem;
  }

  .subsection h3 {
    font-size: 1.4rem;
    color: var(--primary-color);
    margin-bottom: 0.8rem;
  }

  /* Responsive mobile */
  @media (max-width: 768px) {
    .subsection {
      margin-top: 1.2rem;
    }

    .subsection h3 {
      font-size: 1.2rem;
    }
  }

  /* Responsive large screens */
  @media (min-width: 1440px) {
    .subsection {
      margin-top: 1.8rem;
    }

    .subsection h3 {
      font-size: 1.6rem;
    }
  }
</style>
