---
// Section component - content block with optional h2 title
interface Props {
  title?: string;
  threeColumns?: boolean;
  vertical?: boolean;
  centered?: boolean;
}

const {
  title,
  threeColumns = false,
  vertical = false,
  centered = false,
} = Astro.props;
---

<section
  class="section"
  class:list={{
    "three-columns": threeColumns,
    vertical: vertical,
    centered: centered,
  }}
>
  {title && <h2>{title}</h2>}
  <div class="section-content">
    <slot />
  </div>
</section>

<style>
  .section {
    background-color: transparent;
    border-radius: var(--radius);
    border-top: 1px solid var(--color);
    padding-top: 2rem;
  }

  .section h2 {
    margin-top: 0;
  }

  .section-content {
    display: flex;
    flex-wrap: wrap;
    gap: 1.5rem;
  }

  /* Vertical layout mode */
  .section.vertical .section-content {
    flex-direction: column;
  }

  .section.vertical .section-content > :global(.column) {
    flex: 1 1 auto;
  }

  /* Columns get equal space, max 2 per row */
  .section-content > :global(.column) {
    flex: 1 1 40%;
  }

  /* Three columns mode */
  .section.three-columns .section-content > :global(.column) {
    flex: 1 1 30%;
  }

  /* Non-column content takes full width */
  .section-content > :global(:not(.column)) {
    flex: 1 1 100%;
  }

  /* Centered mode */
  .section.centered .section-content {
    justify-content: center;
    max-width: 800px;
    margin: 0 auto;
  }

  @media (max-width: 768px) {
    .section {
      padding-top: 1.5rem;
    }

    /* Stack columns vertically on mobile */
    .section-content > :global(.column) {
      flex: 1 1 100%;
    }

    .section-content {
      gap: 1rem;
    }

    .section.centered .section-content {
      max-width: 100%;
    }
  }

  @media (min-width: 768px) and (max-width: 1199px) {
    .section.centered .section-content {
      max-width: 600px;
    }
  }

  @media (min-width: 1440px) {
    .section {
      padding-top: 2.5rem;
    }

    .section-content {
      gap: 2rem;
    }

    .section.centered .section-content {
      max-width: 900px;
    }
  }
</style>
