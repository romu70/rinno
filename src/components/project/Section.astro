---
// Section component - content block with required h2 title
interface Props {
  title: string;
  threeColumns?: boolean;
  vertical?: boolean;
}

const { title, threeColumns = false, vertical = false } = Astro.props;
---

<section class="section" class:list={{ "three-columns": threeColumns, "vertical": vertical }}>
  <h2>{title}</h2>
  <div class="section-content">
    <slot />
  </div>
</section>

<style>
  .section {
    background-color: transparent;
    border-radius: var(--radius);
    border-top: 1px solid var(--color);
    padding-top: 2rem;
  }

  .section h2 {
    font-size: 2rem;
    margin-top: 0;
    margin-bottom: 1rem;
    color: var(--color-darkest);
  }

  .section-content {
    display: flex;
    flex-wrap: wrap;
    gap: 1.5rem;
  }

  /* Vertical layout mode */
  .section.vertical .section-content {
    flex-direction: column;
  }

  .section.vertical .section-content > :global(.column) {
    flex: 1 1 auto;
  }

  /* Columns get equal space, max 2 per row */
  .section-content > :global(.column) {
    flex: 1 1 40%;
  }

  /* Three columns mode */
  .section.three-columns .section-content > :global(.column) {
    flex: 1 1 30%;
  }

  /* Non-column content takes full width */
  .section-content > :global(:not(.column)) {
    flex: 1 1 100%;
  }

  @media (max-width: 768px) {
    .section {
      padding-top: 1.5rem;
    }

    /* Stack columns vertically on mobile */
    .section-content > :global(.column) {
      flex: 1 1 100%;
    }
    .section h2 {
      font-size: 1.6rem;
    }

    .section-content {
      gap: 1rem;
    }
  }

  @media (min-width: 1440px) {
    .section {
      padding-top: 2.5rem;
    }

    .section h2 {
      font-size: 2.3rem;
    }

    .section-content {
      gap: 2rem;
    }
  }
</style>
