---
// Column component - content block with optional h3 title
interface Props {
  title?: string;
  fullWidth?: boolean;
  alignWithContent?: boolean;
}

const { title, fullWidth = false, alignWithContent = false } = Astro.props;
---

<div
  class:list={[
    "column",
    { "full-width": fullWidth, "align-with-content": alignWithContent },
  ]}
>
  {title && <h3>{title}</h3>}
  <div class="column-content">
    <slot />
  </div>
</div>

<style>
  .column {
    /* Minimal styling, no flex rules */
  }

  .column.full-width {
    flex: 1 1 100% !important;
  }

  /* Align content with adjacent column that has a title */
  .column.align-with-content .column-content {
    padding-top: calc(1.6rem + 1.4rem * 1.3 + 0.8rem);
  }

  .column h3 {
    font-size: 1.4rem;
    color: var(--primary-color);
    margin-bottom: 0.8rem;
  }

  .column-content {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  @media (max-width: 768px) {
    .column h3 {
      font-size: 1.2rem;
    }
  }

  @media (min-width: 1440px) {
    .column h3 {
      font-size: 1.6rem;
    }

    .column.align-with-content .column-content {
      padding-top: calc(1.6rem + 1.6rem * 1.3 + 0.8rem);
    }
  }
</style>
