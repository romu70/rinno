---
// Column component - content block with optional h3 title
// Only used inside Section components
interface Props {
  title?: string;
  flex?: string; // e.g., "1", "2", "1 1 400px"
}

const { title, flex = "1" } = Astro.props;
---

<div class="column" style={`flex: ${flex};`}>
  {title && <h3>{title}</h3>}
  <div class="column-content">
    <slot />
  </div>
</div>

<style>
  .column {
    min-width: 0;
  }

  .column h3 {
    font-size: 1.4rem;
    color: var(--primary-color);
    margin-bottom: 0.8rem;
  }

  .column-content {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  /* Responsive mobile */
  @media (max-width: 768px) {
    .column {
      flex: 1 1 100% !important;
    }

    .column h3 {
      font-size: 1.2rem;
    }
  }

  /* Responsive large screens */
  @media (min-width: 1440px) {
    .column h3 {
      font-size: 1.6rem;
    }
  }
</style>
