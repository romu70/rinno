---
// Column component - content block with optional h3 title
interface Props {
  title?: string;
  fullWidth?: boolean;
}

const { title, fullWidth = false } = Astro.props;
---

<div class:list={["column", { "full-width": fullWidth }]}>
  {title && <h3>{title}</h3>}
  <div class="column-content">
    <slot />
  </div>
</div>

<style>
  .column {
    /* Minimal styling, no flex rules */
  }

  .column.full-width {
    flex: 1 1 100% !important;
  }

  .column h3 {
    font-size: 1.4rem;
    color: var(--primary-color);
    margin-bottom: 0.8rem;
  }

  .column-content {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  @media (max-width: 768px) {
    .column h3 {
      font-size: 1.2rem;
    }
  }

  @media (min-width: 1440px) {
    .column h3 {
      font-size: 1.6rem;
    }
  }
</style>
