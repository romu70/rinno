---
// Composant teaser pour les pages en construction
interface Props {
    pageTitle: string;
    teaser: string;
}

const { pageTitle, teaser } = Astro.props;
---

<div class="under-construction">
    <div class="content">
        <h1>{pageTitle}</h1>
        <div class="message">
            <p class="construction-text">
                Cette section est en cours de construction
            </p>
            <div class="teaser-box">
                <p class="teaser-label">Bientôt disponible :</p>
                <p class="teaser-content">{teaser}</p>
            </div>
        </div>
        <a href="/" class="back-button">Retour à l'accueil</a>
    </div>
</div>

<style>
    .under-construction {
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: 60vh;
        padding: 2rem;
    }

    .content {
        text-align: center;
        max-width: 600px;
    }

    h1 {
        font-size: 3rem;
        margin-bottom: 2rem;
    }

    .message {
        margin-bottom: 3rem;
    }

    .construction-text {
        font-size: 1.3rem;
        margin-bottom: 2rem;
        opacity: 0.9;
    }

    .teaser-box {
        background-color: rgba(0, 0, 0, 0.3);
        border-left: 4px solid var(--color-darkest);
        padding: 1.5rem;
        margin: 2rem 0;
        text-align: left;
    }

    .teaser-label {
        font-size: 1rem;
        font-weight: bold;
        margin-bottom: 0.5rem;
        color: var(--color-darkest);
    }

    .teaser-content {
        font-size: 1.1rem;
        line-height: 1.6;
    }

    .back-button {
        display: inline-block;
        padding: 1rem 2rem;
        background-color: var(--color-darkest);
        color: var(--primary-color);
        text-decoration: none;
        border-radius: var(--radius);
        font-size: 1.1rem;
        font-weight: bold;
        transition:
            transform 0.3s ease,
            background-color 0.3s ease;
    }

    .back-button:hover {
        background-color: #c0392b;
        transform: translateY(-2px);
    }

    /* Responsive mobile */
    @media (max-width: 768px) {
        .under-construction {
            padding: 1rem;
            min-height: 50vh;
        }

        h1 {
            font-size: 2rem;
        }

        .construction-text {
            font-size: 1.1rem;
        }

        .teaser-box {
            padding: 1rem;
        }

        .teaser-label {
            font-size: 0.9rem;
        }

        .teaser-content {
            font-size: 1rem;
        }

        .back-button {
            padding: 0.8rem 1.5rem;
            font-size: 1rem;
        }
    }

    /* Responsive large screens */
    @media (min-width: 1440px) {
        h1 {
            font-size: 3.5rem;
        }

        .construction-text {
            font-size: 1.5rem;
        }

        .teaser-content {
            font-size: 1.2rem;
        }

        .back-button {
            font-size: 1.2rem;
        }
    }
</style>
