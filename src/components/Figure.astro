---
import { Image } from "astro:assets";
import type { ImageMetadata } from "astro";

interface Props {
  src: ImageMetadata;
  alt: string;
  caption?: string;
  width?: number;
  height?: number;
}

const { src, alt, caption, width = 800, height } = Astro.props;
---

<figure class="figure">
  <div class="image-container">
    <Image
      src={src}
      alt={alt}
      width={width}
      height={height}
      format="webp"
      quality={85}
    />
  </div>
  {caption && <figcaption>{caption}</figcaption>}
</figure>

<style>
  .figure {
    margin: 2rem 0;
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .image-container {
    width: 100%;
    border-radius: var(--radius);
    overflow: hidden;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
    border: 1px solid var(--color-light);
  }

  .image-container img {
    width: 100%;
    height: auto;
    display: block;
  }

  figcaption {
    font-size: 0.9rem;
    color: var(--color-dark);
    font-style: italic;
    text-align: center;
    padding: 0 1rem;
  }

  /* Responsive mobile */
  @media (max-width: 768px) {
    .figure {
      margin: 1.5rem 0;
    }

    figcaption {
      font-size: 0.85rem;
      padding: 0 0.5rem;
    }
  }

  /* Responsive large screens */
  @media (min-width: 1440px) {
    .figure {
      margin: 2.5rem 0;
    }

    figcaption {
      font-size: 1rem;
    }
  }
</style>
