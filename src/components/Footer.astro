---
// Footer simple avec copyright et lien mentions légales
const currentYear = new Date().getFullYear();
---

<footer>
  <div class="footer-content">
    <p>&copy; {currentYear} Romuald Tisserand - Tous droits réservés</p>
    <a href="/legal">Mentions légales</a>
  </div>
</footer>

<style>
  footer {
    width: 100%;
    padding: 2rem;
    background-color: rgba(0, 0, 0, 0.3);
    margin-top: auto;
  }

  .footer-content {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 2rem;
    max-width: 1200px;
    margin: 0 auto;
    flex-wrap: wrap;
  }

  p {
    font-family: "Quicksand", sans-serif;
    font-size: 0.9rem;
    color: var(--primary-color);
    margin: 0;
    font-style: normal;
  }

  a {
    font-family: "Quicksand", sans-serif;
    font-size: 0.9rem;
    color: var(--primary-color);
    text-decoration: none;
    transition: color 0.3s ease;
  }

  a:hover {
    color: var(--accent-color);
  }

  /* Responsive mobile */
  @media (max-width: 768px) {
    footer {
      padding: 1.5rem 1rem;
    }

    .footer-content {
      flex-direction: column;
      gap: 0.5rem;
      text-align: center;
    }

    p, a {
      font-size: 0.8rem;
    }
  }

  /* Responsive large screens */
  @media (min-width: 1440px) {
    footer {
      padding: 2.5rem;
    }

    p, a {
      font-size: 1rem;
    }
  }
</style>
