---
import { Image } from "astro:assets";
import type { ImageMetadata } from "astro";

// Composant carte projet
interface Props {
  title: string;
  year?: string;
  description: string;
  link?: string;
  image?: ImageMetadata;
  bottomText?: string;
}

const { title, year, description, link, image, bottomText } = Astro.props;
const isClickable = !!link;
const Tag = isClickable ? "a" : "div";
---

<Tag
  href={isClickable ? link : undefined}
  class:list={["project-card", { clickable: isClickable }]}
>
  <div class="project-image">
    {
      image ? (
        <Image
          src={image}
          alt={title}
          width={250}
          height={250}
          format="webp"
          quality={80}
        />
      ) : (
        <div class="image-placeholder">
          <span>{title.charAt(0)}</span>
        </div>
      )
    }
  </div>
  <div class="project-content">
    <div class="card-header">
      <h3>{title}</h3>
      {year && <span class="badge">{year}</span>}
    </div>
    <p class="description">{description}</p>
    {bottomText && <p class="bottom-text">{bottomText}</p>}
  </div>
</Tag>

<style>
  .project-card {
    background-color: var(--color-light);
    border: 2px solid rgba(253, 240, 213, 0.2);
    border-radius: var(--radius);
    padding: 0;
    transition: all 0.3s ease;
    position: relative;
    display: flex;
    gap: 0;
    text-decoration: none;
    width: 100%;
    overflow: hidden;
  }

  .project-card.clickable {
    cursor: pointer;
  }

  .project-card.clickable:hover {
    transform: translateY(-2px);
    border-color: var(--color);
    box-shadow: 0 10px 30px var(--color);
  }

  .project-image {
    flex-shrink: 0;
    width: 200px;
    min-height: 200px;
    align-self: stretch;
    overflow: hidden;
    background-color: var(--color);
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
  }

  .project-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center;
  }

  .image-placeholder {
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    background: linear-gradient(
      135deg,
      var(--color-dark) 0%,
      var(--color) 100%
    );
  }

  .image-placeholder span {
    font-size: 4rem;
    font-weight: bold;
    color: var(--color-ligthest);
  }

  .project-content {
    flex: 1;
    display: flex;
    flex-direction: column;
    gap: 1rem;
    padding: 1.5rem;
  }

  .card-header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    gap: 1rem;
  }

  h3 {
    margin: 0;
  }

  .badge {
    white-space: nowrap;
  }

  .description {
    font-size: 1.2rem;
    color: var(--color-dark);
    line-height: 1.6;
    margin: 0;
    font-style: normal;
    flex: 1;
  }

  .bottom-text {
    font-size: 1.1rem;
    font-weight: bold;
    color: var(--color-darkest);
    line-height: 1.4;
    margin: 0;
    font-style: italic;
    opacity: 0.8;
    font-variant: small-caps;
  }

  /* Responsive mobile */
  @media (max-width: 768px) {
    .project-card {
      flex-direction: column;
    }

    .project-image {
      width: 100%;
      height: 180px;
    }

    .project-content {
      padding: 1.2rem;
    }

    .card-header {
      align-items: center;
      gap: 0.5rem;
    }

    .description {
      font-size: 1.4rem;
    }

    .bottom-text {
      font-size: 1.3rem;
    }
  }

  /* Responsive large screens */
  @media (min-width: 1440px) {
    .project-image {
      width: 250px;
      min-height: 250px;
    }

    .project-content {
      padding: 2rem;
    }

    .description {
      font-size: 1.4rem;
    }

    .bottom-text {
      font-size: 1.2rem;
    }
  }
</style>
