---
import { Image } from "astro:assets";
import type { ImageMetadata } from "astro";

// Composant carte projet
interface Props {
    title: string;
    year: string;
    description: string;
    status: "available" | "soon";
    link?: string;
    image?: ImageMetadata;
}

const { title, year, description, status, link, image } = Astro.props;
const isClickable = status === "available" && link;
const Tag = isClickable ? "a" : "div";
---

<Tag
    href={isClickable ? link : undefined}
    class:list={[
        "project-card",
        { clickable: isClickable, soon: status === "soon" },
    ]}
>
    <div class="project-image">
        {
            image ? (
                <Image
                    src={image}
                    alt={title}
                    width={250}
                    height={250}
                    format="webp"
                    quality={80}
                />
            ) : (
                <div class="image-placeholder">
                    <span>{title.charAt(0)}</span>
                </div>
            )
        }
    </div>
    <div class="project-content">
        <div class="card-header">
            <h3>{title}</h3>
            <span class="year">{year}</span>
        </div>
        <p class="description">{description}</p>
        {
            status === "soon" && (
                <div class="status-badge soon">Bient√¥t disponible</div>
            )
        }
    </div>
</Tag>

<style>
    .project-card {
        background-color: var(--color-light);
        opacity: 0.8;
        border: 2px solid rgba(253, 240, 213, 0.2);
        border-radius: var(--radius);
        padding: 0;
        transition: all 0.3s ease;
        position: relative;
        display: flex;
        gap: 0;
        text-decoration: none;
        width: 100%;
        overflow: hidden;
    }

    .project-card.clickable {
        cursor: pointer;
    }

    .project-card.clickable:hover {
        transform: translateY(-2px);
        border-color: var(--color);
        box-shadow: 0 10px 30px var(--color);
    }

    .project-card.soon {
        opacity: 0.7;
    }

    .project-image {
        flex-shrink: 0;
        width: 200px;
        height: 200px;
        overflow: hidden;
        background-color: var(--color);
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .project-image img {
        width: 100%;
        height: 100%;
        object-fit: cover;
    }

    .image-placeholder {
        width: 100%;
        height: 100%;
        display: flex;
        align-items: center;
        justify-content: center;
        background: linear-gradient(
            135deg,
            var(--color-dark) 0%,
            var(--color) 100%
        );
    }

    .image-placeholder span {
        font-size: 4rem;
        font-weight: bold;
        color: var(--color-ligthest);
    }

    .project-content {
        flex: 1;
        display: flex;
        flex-direction: column;
        gap: 1rem;
        padding: 1.5rem;
    }

    .card-header {
        display: flex;
        justify-content: space-between;
        align-items: flex-start;
        gap: 1rem;
    }

    h3 {
        font-size: 1.8rem;
        color: var(--primary-color);
        margin: 0;
    }

    .year {
        font-size: 1.2rem;
        color: var(--color-dark);
        font-weight: bold;
        white-space: nowrap;
        text-transform: uppercase;
    }

    .description {
        font-size: 1.2rem;
        color: var(--primary-color);
        line-height: 1.6;
        margin: 0;
        font-style: normal;
        flex: 1;
    }

    .status-badge {
        font-size: 0.85rem;
        font-weight: bold;
        padding: 0.5rem 1rem;
        border-radius: var(--radius);
        display: inline-block;
        align-self: flex-start;
    }

    .status-badge.available {
        background-color: rgba(46, 204, 113, 0.2);
        color: #2ecc71;
        border: 1px solid #2ecc71;
    }

    .status-badge.soon {
        background-color: rgba(241, 196, 15, 0.2);
        color: #f1c40f;
        border: 1px solid #f1c40f;
    }

    /* Responsive mobile */
    @media (max-width: 768px) {
        .project-card {
            flex-direction: column;
        }

        .project-image {
            width: 100%;
            height: 180px;
        }

        .project-content {
            padding: 1.2rem;
        }

        .card-header {
            flex-direction: column;
            gap: 0.5rem;
        }

        h3 {
            font-size: 1.5rem;
        }

        .description {
            font-size: 1rem;
        }
    }

    /* Responsive large screens */
    @media (min-width: 1440px) {
        .project-image {
            width: 250px;
            height: 250px;
        }

        .project-content {
            padding: 2rem;
        }

        h3 {
            font-size: 2rem;
        }

        .description {
            font-size: 1.4rem;
        }
    }
</style>
