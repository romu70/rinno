<style>
  h1 {
    text-align: left;
  }

  tag {}

  .content-detail {
    display: flex;
    flex-direction: column;
    gap: 0rem;
  }

  .content-area {
    display: flex;
    flex-wrap: wrap;
    gap: 2rem;
  }

  .photo-container {
    display: flex;
    justify-content: center;
  }

  .caption {
    margin-top: 1rem;
    font-variant: small-caps;
    color: var(--color-dark);
    text-align: center;
    font-size: 1.2rem;
  }


  :global(.content-area > .content-section),
  :global(.content-area > .highlight) {
    flex: 1 1 100%;
  }

  :global(.keywords) {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
  }

  :global(.keyword) {
    font-size: 1.2rem;
    color: var(--primary-color);
    background-color: var(--color-light);
    padding: 0.4rem 1rem;
    border-radius: var(--radius);
  }

  :global(.content-section h2) {
    font-size: 2rem;
    margin-top: 0;
    margin-bottom: 1rem;
    color: var(--color-darkest);
  }

  :global(.content-section h3) {
    font-size: 1.4rem;
    color: var(--primary-color);
    margin-top: 1.5rem;
    margin-bottom: 0.8rem;
  }

  :global(.content-section p) {
    font-size: 1.1rem;
    line-height: 1.8;
    margin-bottom: 0rem;
  }

  :global(.content-section strong) {
    color: var(--color-darkest);
  }

  /* Responsive mobile */
  @media (max-width: 768px) {
    .content-detail {
      gap: 2rem;
    }

    :global(.content-section h2) {
      font-size: 1.6rem;
    }

    :global(.content-section h3) {
      font-size: 1.2rem;
    }

    :global(.content-section p) {
      font-size: 1rem;
    }
  }

  /* Responsive large screens */
  @media (min-width: 1440px) {
    /* 2-column layout for content */
    :global(.content-area > .content-section),
    :global(.content-area > .highlight) {
      flex: 1 1 calc(50% - 1rem);
    }

    /* Full-width override */
    :global(.content-area > .content-section.full-width),
    :global(.content-area > .highlight.full-width) {
      flex: 1 1 100%;
    }

    :global(.content-section h2) {
      font-size: 2.3rem;
    }

    :global(.content-section h3) {
      font-size: 1.6rem;
    }

    :global(.content-section p) {
      font-size: 1.2rem;
    }
  }
</style>
