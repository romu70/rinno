---
import ProjectsLanding from "../../layouts/ProjectsLanding.astro";
import ProjectCard from "../../components/ProjectCard.astro";
import novyspec from "../../assets/pro/novyspec/thumbnail.png";
import smartrx from "../../assets/pro/smartrx/thumbnail.png";
import meditect from "../../assets/pro/meditect/thumbnail.png";

const pageDescription =
  "Portfolio de projets professionnels en Product Management et UX Design en SaaS B2B.";

const structuredData = {
  "@context": "https://schema.org",
  "@type": "CollectionPage",
  name: "Projets Professionnels - Romuald Tisserand",
  description: pageDescription,
};
---

<ProjectsLanding
  title="Produits pour les pros"
  intro="Product management & design pour résoudre des problèmes métier complexes"
  description={pageDescription}
  structuredData={structuredData}
  breadcrumbs={[{ name: "Projets professionnels", url: "/pro" }]}
>
  <ProjectCard
    title="Meditect"
    year="2021 - 2024"
    description="Digitaliser la santé en Afrique subsaharienne, en commençant par les pharmacies."
    link="/pro/meditect"
    image={meditect}
    bottomText="5% du marché - 7 pays - en 2 ans"
  />
  <ProjectCard
    title="Smart-Rx"
    year="2019 - 2020"
    description="Harmoniser l'UX pour 6000 pharmacies (Top 3 France)."
    link="/pro/smartrx"
    image={smartrx}
    bottomText="2 produits lancés / +2000 clients - Structuration UX"
  />
  <ProjectCard
    title="Novyspec"
    year="2017 - 2018"
    description="Solution SaaS & touch-first pour moderniser l'audit industriel."
    link="/pro/novyspec"
    image={novyspec}
    bottomText="4 verticales métier qualifiées - Structuration UX"
  />
</ProjectsLanding>
