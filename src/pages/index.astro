---
import { Image } from "astro:assets";
import Layout from "../layouts/Layout.astro";
import Row from "../components/project/Row.astro";
import Section from "../components/project/Section.astro";
import Column from "../components/project/Column.astro";
import ProjectCard from "../components/ProjectCard.astro";
import portrait from "../assets/portrait.jpeg";
import novyspec from "../assets/pro/novyspec/thumbnail.png";
import meditect from "../assets/pro/meditect/thumbnail.png";
import galleriesImg from "../assets/perso/galleries/thumbnail.jpg";

const structuredData = {
  "@context": "https://schema.org",
  "@type": "ProfilePage",
  mainEntity: {
    "@type": "Person",
    name: "Romuald Tisserand",
    jobTitle: "Product & Design Leader",
    description:
      "Product & Design Leader spécialisé dans les solutions SaaS B2B. Je crée des produits pour résoudre les problèmes des pros.",
    url: "https://romu70.github.io",
    alumniOf: [],
    worksFor: [],
  },
};
---

<Layout
  title="Romuald Tisserand - Product & Design Leader | Portfolio"
  description="Product & Design Leader spécialisé dans les solutions SaaS B2B. Je crée des produits pour résoudre les problèmes des pros."
  type="profile"
  image={portrait}
  structuredData={structuredData}
>
  <article class="container-narrow content-detail">
    <div class="project-content">
      <Row>
        <Section title="">
          <Column>
            <div class="photo-container">
              <Image
                src={portrait}
                alt="Portrait de Romuald Tisserand"
                style="width: 20rem; height: 20rem; border: 3px solid var(--color); border-radius: 50%;"
              />
            </div>
            <div class="caption">
              Crédit photo: <a href="https://yriss.fr/" target="_blank"
                >maison Yriss</a
              >
            </div>
          </Column>
          <Column title="Romuald Tisserand">
            <h4>Product & Design Leader B2B</h4>
            <p>
              J'ai construit un ERP de pharmacie SaaS & <em>touch-first</em> en Afrique
              subsaharienne (7 pays - 5% du marché en 2 ans).
            </p>
            <p>
              Avant ça, j'ai lancé une application Android de gestion logistique
              et un éditeur graphique d'étiquettes SaaS.
            </p>
            <p>
              De la discovery terrain à la delivery, je structure et conçois des
              produits pour résoudre les problèmes des pros.
            </p>
          </Column>
        </Section>
      </Row>
      <Row>
        <Section>
          <Column>
            <p class="centered-link">
              <a href="/pro">Travaux professionnels</a>
            </p>
          </Column>
          <Column>
            <p class="centered-link">
              <a href="/perso">Projets personnels</a>
            </p>
          </Column>
        </Section>
      </Row>
      <Row>
        <Section title="Du produit stratégique à l’exécution" centered>
          <Column fullWidth />
          <Column>
            <div class="card-container card-wide">
              <ProjectCard
                title="Meditect"
                year="2021 - 2024"
                description="Conception et déploiement d’un ERP SaaS B2B pour les pharmacies en Afrique subsaharienne."
                link="/pro/meditect"
                image={meditect}
                bottomText="Head of Product & Design - 5% du marché - 7 pays - en 2 ans"
                category="pro"
              />
            </div>
            <div class="card-container card-medium">
              <ProjectCard
                title="Novyspec"
                year="2017 - 2018"
                description="Solution SaaS & touch-first pour moderniser l'audit industriel."
                link="/pro/novyspec"
                image={novyspec}
                bottomText="Product Manager & Designer - Structuration UX"
                category="pro"
              />
            </div>
            <div class="card-container card-narrow">
              <ProjectCard
                title="Galleries"
                year="2023 - présent"
                description="Développement d'une galerie virtuelle pour présenter des typographies et du street art."
                link="/perso/galleries"
                image={galleriesImg}
                bottomText="Projet personnel"
                category="perso"
              />
            </div>
          </Column>
        </Section>
      </Row>
    </div>
  </article>
</Layout>

<style>
  .project-content {
    display: flex;
    flex-wrap: wrap;
    gap: 2rem;
  }

  .contact-info {
    display: flex;
    justify-content: space-between;
    gap: 0.5rem;
  }

  h1 {
    text-align: left;
  }

  .content-detail {
    display: flex;
    flex-direction: column;
    gap: 0rem;
  }

  .content-area {
    display: flex;
    flex-wrap: wrap;
    gap: 2rem;
  }

  .photo-container {
    display: flex;
    justify-content: center;
  }

  .caption {
    margin-top: 1rem;
    font-variant: small-caps;
    color: var(--color-dark);
    text-align: center;
    font-size: 1.1rem;
  }

  .centered-link {
    text-align: center;
  }

  :global(.content-area > .content-section),
  :global(.content-area > .highlight) {
    flex: 1 1 100%;
  }

  :global(.keywords) {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
  }

  :global(.keyword) {
    font-size: 1.2rem;
    color: var(--primary-color);
    background-color: var(--color-light);
    padding: 0.4rem 1rem;
    border-radius: var(--radius);
  }

  /* Card container styling for progressive widths */
  .card-container {
    width: 100%;
    margin: 0 auto;
  }

  /* Responsive mobile - all cards full width */
  @media (max-width: 768px) {
    .content-detail {
      gap: 2rem;
    }

    .card-container {
      width: 100%;
    }
  }

  /* Responsive tablet/desktop - progressive widths start appearing */
  @media (min-width: 768px) {
    .card-container.card-wide {
      width: 100%;
    }

    .card-container.card-medium {
      width: 90%;
    }

    .card-container.card-narrow {
      width: 80%;
    }
  }

  /* Responsive mid-range desktop - more pronounced difference */
  @media (min-width: 1200px) {
    .card-container.card-wide {
      width: 100%;
    }

    .card-container.card-medium {
      width: 90%;
    }

    .card-container.card-narrow {
      width: 80%;
    }
  }

  /* Responsive large screens */
  @media (min-width: 1440px) {
    /* 2-column layout for content */
    :global(.content-area > .content-section),
    :global(.content-area > .highlight) {
      flex: 1 1 calc(50% - 1rem);
    }

    /* Full-width override */
    :global(.content-area > .content-section.full-width),
    :global(.content-area > .highlight.full-width) {
      flex: 1 1 100%;
    }

    /* Maximum progressive width difference on large screens */
    .card-container.card-wide {
      width: 100%;
    }

    .card-container.card-medium {
      width: 95%;
    }

    .card-container.card-narrow {
      width: 90%;
    }
  }
</style>
